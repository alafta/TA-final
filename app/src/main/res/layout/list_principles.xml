<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:foregroundGravity="center"
        android:layout_marginLeft="30dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_param">
            <ImageView
                android:id="@+id/buletps1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="12dp"
                android:adjustViewBounds="true"
                android:background="@drawable/round"/>

            <TextView
                android:id="@+id/txtprinc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buletps1"
                android:layout_marginHorizontal="13dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserratregular"
                android:gravity="start"
                android:foregroundGravity="bottom"
                android:paddingHorizontal="4dp"
                android:text="@string/p1text"
                android:textColor="@color/text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/bgnomps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/buletps1"
                android:layout_alignTop="@id/buletps1"
                android:layout_alignStart="@id/buletps1"
                android:layout_alignEnd="@id/buletps1"
                android:layout_alignRight="@+id/buletps1"
                android:layout_alignBottom="@id/buletps1"
                android:fontFamily="@font/montserratregular"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>