<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:gravity="center"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/fourth">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/secondary"
                android:fontFamily="@font/tajawalextrabold"
                android:textSize="40sp"/>

            <ImageView
                android:id="@+id/imageOnboarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="15dp"
                android:adjustViewBounds="true"
                android:layout_below="@id/textTitle"/>

            <TextView
                android:id="@+id/textDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="15dp"
                android:gravity="center"
                android:fontFamily="@font/tajawalregular"
                android:textColor="@color/secondary_2"
                android:textSize="16sp"
                android:layout_below="@id/imageOnboarding"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>