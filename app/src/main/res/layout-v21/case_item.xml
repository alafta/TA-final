<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/secondary">
<!--        app:cardElevation="10dp"-->
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/numbCase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawalbold"
                android:gravity="center_horizontal"
                android:scrollbars="none"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/fourth"
                android:textSize="50sp" />

            <ImageView
                android:id="@+id/bgcase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/case_bg"
                android:layout_below="@+id/numbCase"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/caseText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@id/bgcase"
                android:layout_alignLeft="@id/bgcase"
                android:layout_alignTop="@id/bgcase"
                android:layout_alignEnd="@id/bgcase"
                android:layout_alignRight="@+id/bgcase"
                android:layout_alignBottom="@id/bgcase"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/tajawalbold"
                android:gravity="center_vertical"
                android:text="Case Study"
                android:textSize="11sp"
                android:textColor="@color/secondary" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>